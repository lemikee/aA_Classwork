<form action="<%= cats_url %>" method="POST">

  <table>

    <tr>
        <th colspan="2">As if we need more cats ðŸ˜’</th>
    </tr>

    <% [:name, :sex, :color, :birth_date, :description].each do |attribute| %>

    <tr>
      <td><label for="attribute"> <%= attribute.capitalize %> </label>  </td>
      <td><input id="attribute" type="text" name="cat[attribute]" value="<%= @cat[attribute] %>"> </td> <!-- this creates its own row!-->
